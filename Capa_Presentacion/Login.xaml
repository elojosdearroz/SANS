<Window x:Class="Capa_Presentacion.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capa_Presentacion"
        mc:Ignorable="d"
        Title="Sistema Universitario" Height="720" Width="700"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8e44ad" Offset="0"/>
            <GradientStop Color="#9b59b6" Offset="0.5"/>
            <GradientStop Color="#663399" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="LoginPanelGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#34495e" Offset="0"/>
                        <GradientStop Color="#2c3e50" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2c3e50" Offset="0"/>
                                            <GradientStop Color="#34495e" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>

        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                             From="50" To="0" Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Canvas>
            <Ellipse Width="300" Height="300" 
                     Canvas.Left="-136" Canvas.Top="-143"
                     Opacity="0.1">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="200" Height="200" 
                     Canvas.Right="-50" Canvas.Bottom="-50"
                     Opacity="0.1" Canvas.Left="562" Canvas.Top="586">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <!-- Contenedor PRINCIPAL Modificale -->
        <Border Background="{StaticResource LoginPanelGradient}"
                Width="450" Height="620"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="20" BlurRadius="30"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform/>
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideInAnimation}"/>
                </EventTrigger>
            </Border.Triggers>

            <StackPanel Margin="50,40">
                <!-- Cerrar -->
                <Button Content="×" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#7f8c8d"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>

                <!-- Imagen universidad? Podemos dejar como esta -->
                <Border Width="100" Height="100" 
                        CornerRadius="50"
                        Margin="0,20,0,30"
                        HorizontalAlignment="Center"
                        Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" 
                                          Opacity="0.3" 
                                          ShadowDepth="5" 
                                          BlurRadius="10"/>
                    </Border.Effect>
                    <TextBlock Text="🏛️" 
                               FontSize="50" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Univalle -->
                <TextBlock Text="Univalle" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2c3e50"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Sistema de Gestión Académica" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="#34495e"
                           Margin="0,0,0,40"/>

                <!-- Usuario -->
                <TextBlock Text="Nombre de Usuario" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,8"/>
                <Border Background="White" 
                        BorderBrush="#e0e0e0" 
                        BorderThickness="2" 
                        CornerRadius="10"
                        Margin="0,0,0,25">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498db"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBox x:Name="txtUsuario" 
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="16"
                             Padding="15,0"
                             Height="46"
                             VerticalContentAlignment="Center"
                             Foreground="#2c3e50"/>
                </Border>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#2c3e50"
                           Margin="0,0,0,8"/>
                <Border Background="White" 
                        BorderBrush="#e0e0e0" 
                        BorderThickness="2" 
                        CornerRadius="10"
                        Margin="0,0,0,35">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498db"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <PasswordBox x:Name="txtPassword" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="16"
                                 Padding="15,0"
                                 Height="46"
                                 VerticalContentAlignment="Center"
                                 Foreground="#2c3e50"/>
                </Border>

                <!-- Iniciar Sesión -->
                <Button x:Name="btnLogin"
                        Content="INICIAR SESIÓN" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,0,25" Click="btnLogin_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
